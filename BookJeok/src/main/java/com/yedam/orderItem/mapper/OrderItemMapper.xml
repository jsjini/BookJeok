<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.yedam.orderItem.mapper.OrderItemMapper">
	<select id="selectMemberInfo" resultType="orderItem" parameterType="int">
  		select m_name, phone, point
		from member
		where member_no = #{memberNo}
  	</select>
	
  	<insert id="insertOrderItem" parameterType="orderItemPage">
  		insert into order_item values (order_item_seq.nextval, #{odNo}, #{bookNo}, #{quantity})
  	</insert>
  	
  	
</mapper> 